<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/pick_photo_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_text_first_background"
        android:gravity="center"
        android:padding="15dp"
        android:text="拍一张"
        android:textColor="#3EA9FA"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"/>

    <TextView
        android:id="@+id/pick_photo_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_text_last_background"
        android:gravity="center"
        android:padding="15dp"
        android:text="从手机相册获取"
        android:textColor="#3EA9FA"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/pick_photo_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_text_bottom_background"
        android:gravity="center"
        android:padding="15dp"
        android:text="取消"
        android:textColor="#3EA9FA"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@android:color/transparent"/>

</LinearLayout>